<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="right">

            <erqal.mylibrary.widget.UTextView
                android:id="@+id/pregress_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="40%"
                android:textSize="14dp" />

            <erqal.mylibrary.widget.UTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/integrity"
                android:textColor="@color/grey"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp">

            <View
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@color/green" />

            <View
                android:id="@+id/progress_bar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/grey" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/basic_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">


        <erqal.mylibrary.widget.UTextView
            android:id="@+id/basic_info_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/arrow_left_4settings_rtl"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/rank"
            android:gravity="center"
            android:text="@string/complete"
            
            android:textSize="14dp" />

        <erqal.mylibrary.widget.UTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/rank"
            android:gravity="center_vertical|right"
            android:text="@string/basic_info"
            
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recent_work"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">


        <erqal.mylibrary.widget.UTextView
            android:id="@+id/recent_work_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/arrow_left_4settings_rtl"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/disfillout"
            
            android:textSize="14dp" />

        <erqal.mylibrary.widget.UTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/rank"
            android:gravity="center|right"
            android:text="@string/recent_work"
            
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/degree"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">


        <erqal.mylibrary.widget.UTextView
            android:id="@+id/degree_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/arrow_left_4settings_rtl"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/disfillout"
            
            android:textSize="14dp" />

        <erqal.mylibrary.widget.UTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/rank"
            android:gravity="center|right"
            android:text="@string/degree"
            
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/resume_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="15dp"
            android:src="@drawable/swtich_status" />

        <erqal.mylibrary.widget.UTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="15dp"
            android:text="@string/open_resume"
            android:textSize="14dp" />
    </LinearLayout>

    <erqal.mylibrary.widget.UTextView
        android:id="@+id/resume_record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/rank"
        android:gravity="right|center_vertical"
        android:padding="15dp"
        android:text="@string/resume_record"
        
        android:textSize="14dp" />

</LinearLayout>