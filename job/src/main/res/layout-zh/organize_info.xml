<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/organize_picture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:src="@drawable/user_icon" />

            <erqal.mylibrary.widget.UEditText
                android:id="@+id/organize_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/default_edittext_btn"
                android:hint="@string/organize_name"
                android:maxLength="50"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="@color/lightgray"
                android:textSize="14dp" />

            <erqal.mylibrary.widget.UTextView
                android:id="@+id/area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/default_edittext_btn"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:padding="15dp"
                android:text="@string/area"
                android:textColor="@color/lightgray"
                android:textSize="14dp" />


            <erqal.mylibrary.widget.UEditText
                android:id="@+id/phone_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/default_edittext_btn"
                android:gravity="center_vertical|left"
                android:hint="@string/phone_number"
                android:padding="15dp"
                android:singleLine="true"
                android:textColorHint="@color/lightgray"
                android:textSize="14dp" />

            <erqal.mylibrary.widget.UEditText
                android:id="@+id/organize_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/default_edittext_btn"
                android:hint="@string/organize_detail"
                android:maxLength="2000"
                android:padding="15dp"
                android:textColorHint="@color/lightgray"
                android:textSize="14dp" />

            <erqal.mylibrary.widget.UButton
                android:id="@+id/save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_blue"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>